<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:P02Project="clr-namespace:P02Project" xmlns:Custom="http://schemas.microsoft.com/surface/2008" x:Class="P02Project.Screens.SplitGridView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="1630" Height="900">
    <Grid x:Name="PageContent" Height="900" Margin="29.592,0,0,0" Width="1600">
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- set a scroll view to store the content -->
        <Custom:SurfaceScrollViewer Grid.Column="1" Margin="50,20,0,37" Grid.RowSpan="2" Width="1100" Background="#7F525252" Name="splitContentScrollViewer" HorizontalScrollBarVisibility="Disabled" ScrollChanged="splitContentScrollViewer_ScrollChanged" />

    </Grid>
</UserControl>

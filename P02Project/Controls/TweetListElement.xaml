<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Class="P02Project.TweetListElement"
    x:Name="UserControl"
    d:DesignWidth="900" d:DesignHeight="120">

    <Grid x:Name="_layout">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" x:Name="_tweetImg" HorizontalAlignment="Left" Margin="25,10,0,10" Width="150" />
        <TextBlock Grid.Column="1" x:Name="_tweetTxt" Margin="20,10,42.5,10" TextWrapping="Wrap" Text="TextBlock"
                   FontSize="26.667" Foreground="White" FontFamily="Century Gothic" />

    </Grid>
</UserControl>
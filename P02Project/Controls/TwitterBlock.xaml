<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="P02Project.TwitterBlock"
	x:Name="TwitterMessage" d:DesignHeight="78" d:DesignWidth="330">
    
	<Grid x:Name="LayoutRoot" Background="#FF9AE4E8" Height="47">
		<Grid.Effect>
			<DropShadowEffect/>
		</Grid.Effect>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/P02Project;component/Resources/images/Twitter/twitter-bird-light-bgs.png" HorizontalAlignment="Right" Width="84.333" Margin="0,-14.75,4,-11.651" />
        <TextBlock FontSize="16" Grid.Column="1" TextWrapping="Wrap" Text="CCF are at the Massey High @Hurricane_Kids gig today. They are rocking out  supporting kids with cancer! pic.twitter.com/1e2HvbKTIw" Name="msg"  TextAlignment="Left" Margin="-15.25,0,15.25,0" />
        <Button Grid.ColumnSpan="2" Content="Button" Margin="-3,0,0,0" Opacity="0" Click="twitterBoxClicked"/>
	</Grid>
</UserControl>
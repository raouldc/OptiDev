<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:Custom="http://schemas.microsoft.com/surface/2008" 
    xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF" 
    mc:Ignorable="d"
	x:Class="P02Project.ContactUs"
	x:Name="UserControl"
	d:DesignWidth="1630" d:DesignHeight="900" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <DataTemplate x:Key="MapAddressTemplate">
            <m:Pushpin m:MapLayer.Position="{Binding Location}" Tag="{Binding}" TouchDown="Pushpin_TouchEnter" />
        </DataTemplate>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
				
		<!-- screenWidth=1920  screenHeight=1080-->
		<!-- Option Tiles: width = screenWidth/5,  height = screenHeight/15-->

        <Grid.RowDefinitions>
            <RowDefinition x:Name="_gridRow0" />
            <RowDefinition x:Name="_gridRow1"/>
            <RowDefinition x:Name="_gridRow2"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="_gridCol0" />
            <ColumnDefinition x:Name="_gridCol1" />
            <ColumnDefinition x:Name="_gridCol2" />
        </Grid.ColumnDefinitions>

        <ScrollViewer x:Name="text" Grid.Column="1" Margin="20" Grid.RowSpan="3" Grid.ColumnSpan="2" Background="#7F525252"></ScrollViewer>
        <StackPanel Margin="20" Grid.RowSpan="2">
            <Button x:Name="_fmlPlcs" Content="Family Places" Margin="20" FontSize="48" FontFamily="Andy" Background="#ffe411ff" BorderThickness="0" BorderBrush="#00707070" Foreground="White" Click="fmlPlClicked">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button x:Name="_mainOff" Content="Main Office" Margin="20" FontSize="48" FontFamily="Andy" BorderThickness="0" Background="#ffe411ff" BorderBrush="#00707070" Foreground="White"  Click="mainOffClicked" />
            <Button x:Name="_fndrsOff" Content="Fundraising Offices" Margin="20" FontSize="48" FontFamily="Andy" BorderThickness="0" Background="#ffe411ff" BorderBrush="#00707070" Foreground="White"  Click="fndrsClicked" />
            <Button x:Name="_fmlSptBrns" Content="Family Support Branches" Margin="20" FontSize="48" FontFamily="Andy" BorderThickness="0" Background="#ffe411ff" BorderBrush="#00707070" Foreground="White" Click="fmlSptBrsClicked" />

        </StackPanel>
            
            <!-- map here -->
			<Grid Grid.Column="1" Grid.ColumnSpan="2" Margin="0,40,276,40" Grid.RowSpan="3">
                <m:Map Name="houseMap" Mode="Road" CredentialsProvider="AmVwNPRfp45FelI8abG8yRRvQNPORDJdVE74ipdYXqeTtOnYsbgYxkc55CDxHqFv" Center="-41, 173" ZoomLevel="5.9" AnimationLevel="UserInput" GotFocus="Pushpin_TouchLeave" Margin="37,0,201,0">
                    <m:MapItemsControl ItemsSource="{Binding Addresses}"
                                 ItemTemplate="{StaticResource MapAddressTemplate}"/>
                    <!--m:MapLayer Name="ContentPopupLayer">
                    <Grid x:Name="ContentPopup" Visibility="Collapsed" Background="White" Opacity="0.8" Height="100" Width="300" >
                            <StackPanel Margin="15">
                                <TextBlock x:Name="ContentPopupTitle" FontSize="12" FontWeight="Bold"></TextBlock>
                            	<TextBlock x:Name="ContentPopupAddress" FontSize="12" ></TextBlock>
                            </StackPanel>
                        </Grid >
                    </m:MapLayer-->
                </m:Map>
            <TextBlock Height="271" Name="textBlock1" Text="TextBlock" Width="189" Background="White" Margin="616,6,0,0" />
        </Grid>


    </Grid>
</UserControl>
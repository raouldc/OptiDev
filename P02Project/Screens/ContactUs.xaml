<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:Custom="http://schemas.microsoft.com/surface/2008" 
    xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF" 
    mc:Ignorable="d"
	x:Class="P02Project.ContactUs"
	x:Name="UserControl"
	d:DesignWidth="1630" d:DesignHeight="900" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <DataTemplate x:Key="MapAddressTemplate">
            <m:Pushpin m:MapLayer.Position="{Binding Location}" Tag="{Binding}" TouchDown="Pushpin_TouchEnter" />
        </DataTemplate>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="White">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="282.88"/>
		</Grid.ColumnDefinitions>
		
		<!-- screenWidth=1920  screenHeight=1080-->
		<!-- Option Tiles: width = screenWidth/5,  height = screenHeight/15-->
		<Grid Grid.ColumnSpan="2">
            <Custom:ScatterViewItem x:Name="_fmlPlSVI"  HorizontalAlignment="Left" Height="80" Width="384" Margin="48,50,0,0" VerticalAlignment="Top" Background="#ff710b7e" FontSize="26.667" FontFamily="Andy">
				<Grid>
                    <ContentPresenter Content="Family Places" HorizontalAlignment="Center" VerticalAlignment="Center"/>
					<Custom:SurfaceButton Opacity="0" x:Name="_fmlPlSVIBtn" Click="fmlPlClicked"/>
				</Grid>
			</Custom:ScatterViewItem>

            <Custom:ScatterViewItem x:Name="_mainOffSVI" HorizontalAlignment="Left" Height="80" Width="384" Margin="48,149,0,0" VerticalAlignment="Top" Background="#ffe411ff" FontSize="26.667" FontFamily="Andy">
				<Grid> 
					<ContentPresenter Content="Main Office" HorizontalAlignment="Center" VerticalAlignment="Center"/>
					<Custom:SurfaceButton Opacity="0" x:Name="_mainOffSVIBtn" Click="mainOffClicked"/>
				</Grid>
			</Custom:ScatterViewItem>

            <Custom:ScatterViewItem x:Name="_fndRsSVI" HorizontalAlignment="Left" Height="80" Width="384" Margin="48,248,0,0" VerticalAlignment="Top" Background="#ffe411ff" FontSize="26.667" FontFamily="Andy">
				<Grid> 
					<ContentPresenter Content="Fundraising Offices" HorizontalAlignment="Center" VerticalAlignment="Center"/>
					<Custom:SurfaceButton Opacity="0" x:Name="_fndRsSVIBtn" Click="fndRsClicked"/>
				</Grid>
			</Custom:ScatterViewItem>

            <Custom:ScatterViewItem x:Name="_fmlSptBrsSVI" HorizontalAlignment="Left" Height="80" Width="384" Margin="48,347,0,0" VerticalAlignment="Top" Background="#ffe411ff" FontSize="26.667" FontFamily="Andy">
				<Grid> 
					<ContentPresenter Content="Family Support Branches" HorizontalAlignment="Center" VerticalAlignment="Center"/>
					<Custom:SurfaceButton Opacity="0" x:Name="_fmlSptBrsSVIBtn" Click="fmlSptBrsClicked"/>
				</Grid>
			</Custom:ScatterViewItem>


            <Custom:ScatterViewItem HorizontalAlignment="Left" Background="White" Height="326" Margin="82,0,0,58" VerticalAlignment="Bottom" Width="326">
                <Image Source="/P02Project;component/Resources/ContactUsQR.png"/>
            </Custom:ScatterViewItem>

            
            
            
            
            
            
            <!-- map here -->
			<Grid Margin="500,70,70,70">
                <m:Map Name="houseMap" Mode="Road" CredentialsProvider="AmVwNPRfp45FelI8abG8yRRvQNPORDJdVE74ipdYXqeTtOnYsbgYxkc55CDxHqFv" Center="-41, 173" ZoomLevel="5.9"
                   Margin="190,22,124,24" AnimationLevel="UserInput" GotFocus="Pushpin_TouchLeave">
                    <m:MapItemsControl ItemsSource="{Binding Addresses}"
                                 ItemTemplate="{StaticResource MapAddressTemplate}"/>
                    <m:MapLayer Name="ContentPopupLayer">
                        <Grid x:Name="ContentPopup" Visibility="Collapsed" Background="White" Opacity="0.8" Height="100" Width="300" >
                            <StackPanel Margin="15">
                                <TextBlock x:Name="ContentPopupTitle" FontSize="12" FontWeight="Bold"></TextBlock>
                            	<TextBlock x:Name="ContentPopupAddress" FontSize="12" ></TextBlock>
                            </StackPanel>
                        </Grid>
                    </m:MapLayer>
                </m:Map>
            </Grid>

            



        </Grid>
	</Grid>
</UserControl>
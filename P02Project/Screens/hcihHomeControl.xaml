<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:view="clr-namespace:P02Project"
	x:Class="P02Project.hcihHomeControl"
	x:Name="hcihHome"
	d:DesignWidth="1630" d:DesignHeight="900" Width="1630" Height="900">

    <Grid x:Name="LayoutRoot">
        <Grid Margin="0">

            <!-- set the polaroid photos-->
            <view:PoloroidControl x:Name="donate" HorizontalAlignment="Center" VerticalAlignment="Center" Width="330" Height="316" RenderTransformOrigin="0.5,0.5" MouseUp="donate_MouseUp">
                <view:PoloroidControl.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-10.232"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </view:PoloroidControl.RenderTransform>
            </view:PoloroidControl>
        </Grid>
    </Grid>
</UserControl>